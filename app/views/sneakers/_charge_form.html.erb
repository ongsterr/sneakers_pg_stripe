<%= form_tag charge_sneaker_path(sneaker) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span><strong>Amount:</strong> <%= number_to_currency sneaker.price.to_f / 100.0 %> </span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= sneaker.name %>"
          data-email=<%= user.email %>
          data-currency="aud"
          data-amount="<%= sneaker.price %>"
          data-locale="auto"></script>
<% end %>